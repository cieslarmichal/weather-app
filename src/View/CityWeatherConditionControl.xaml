             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WeatherApp.View"
             mc:Ignorable="d" 
             d:DesignHeight="22" d:DesignWidth="360">
    <Grid Background="#AAE5E5E5">
        <DockPanel Margin="1,1,1,1">
            <TextBlock x:Name="nameTextBlock" Text="City: " FontSize="15" FontWeight="Bold"/>
            <TextBlock x:Name="temperaturTextBlock" Text="30" FontSize="15" FontWeight="Bold"/>
